{
  "name": "unistate",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "commit": "git-cz"
  },
  "private": true,
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-angular": "^18.4.3",
    "@nx/angular": "^17.1.3",
    "@nx/js": "^17.1.3",
    "@nx/web": "^17.1.3",
    "git-cz": "^4.9.0",
    "husky": "^8.0.3",
    "nx": "17.1.3"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,json,css,scss,ts,html,component.html}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS"
    }
  },
  "workspaces": [
    "packages/*"
  ]
}
